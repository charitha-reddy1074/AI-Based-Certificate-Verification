# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# MongoDB Atlas connection string (Recommended)
DATABASE_URL=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/certchain_db
MONGODB_URL=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/certchain_db
# For local MongoDB (Alternative):
# DATABASE_URL=mongodb://localhost:27017/certchain_db

# JWT & Security
JWT_SECRET=your_jwt_secret_here_change_in_production
API_KEY=your_api_key_here

# Session Secret (for express-session)
SESSION_SECRET=your_session_secret_here_change_in_production

# Blockchain Configuration - Polygon Mumbai Testnet
# Get your private key from MetaMask (NEVER commit this to version control)
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
UNIVERSITY_PRIVATE_KEY=YOUR_UNIVERSITY_PRIVATE_KEY_HERE

# RPC URLs for Different Networks
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETH_RPC_URL=https://rpc-mumbai.maticvigil.com

# API Keys
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Contract Addresses (update after deployment)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CERTIFICATE_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000

# IPFS / Web3 Storage Configuration
WEB3_STORAGE_TOKEN=YOUR_WEB3_STORAGE_TOKEN_HERE
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
STORACHA_API_TOKEN=your_storacha_token_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Logging
LOG_LEVEL=info

# AWS Configuration (Optional - for Rekognition face recognition)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173

# Blockchain Network (development/testnet/mainnet)
BLOCKCHAIN_NETWORK=mumbai

# Enable/Disable Features
ENABLE_FACE_RECOGNITION=true
ENABLE_BLOCKCHAIN=true
ENABLE_IPFS=true
